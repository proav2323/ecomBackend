generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  name     String
  role     ROLE
  orders   Order[]
  reviews  reviews[]
}

enum ROLE {
  USER
  ADMIN
}

model product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  images      String[]
  colors      String[]
  reviews reviews[]
  price       Int
  company     String
  new         Boolean
  onBanner    Boolean
  bannerText  String?
  cta         String?
  stock Int
  categoryId  String   @db.ObjectId
  category    category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Color {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  color     String   @unique
  name      String
}

type Cart {
  items      Items[]
  totalPrice Int
  totalQty   Int
}

type Items {
  Qty       Int
  productId String
  colorId String
  price Int
}

model Order {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  orderById  String  @db.ObjectId
  orderBy    User    @relation(fields: [orderById], references: [id], onDelete: Cascade)
  totalPrice Int
  totalQty   Int
  cart       Cart
  method     String
  cardNumber Int?
  cvv        Int?
  nameOfCard String?
  expiry     String
  status Status
  orderAt DateTime @default(now())
  address address
  // add google pay stuff here
}

type address {
  road Int
  number Int
}

enum Status {
  ORDERED
  SHIPPED
  OUTONDELIVERY
  DELIVERED
}

model category {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  image    String
  products product[]
}

model reviews {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment String
  stars Int
  productId String @db.ObjectId
  product product @relation(fields: [productId], references: [id], onDelete: Cascade)
}
